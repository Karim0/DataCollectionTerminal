<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context=".activities.BalancesActivity">


    <Spinner
        android:id="@+id/bl_dropdown_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/bl_barcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/bl_btn_barcode"
            android:layout_width="55dp"
            android:layout_height="50dp"
            android:scaleType="fitXY"
            android:src="@drawable/scan_barcode"
            tools:src="@drawable/scan_barcode" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/bl_infoBorder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="10pt" />
    </ScrollView>
</LinearLayout>