<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/mv_ed_code_pallet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Pallet barcode"
            android:inputType="textPersonName" />

        <ImageButton
            android:id="@+id/mv_btn_code_pallet"
            android:layout_width="55dp"
            android:layout_height="50dp"
            android:scaleType="fitXY"
            android:src="@drawable/scan_barcode"
            tools:src="@drawable/scan_barcode" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/mv_name_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />

        <androidx.core.widget.ContentLoadingProgressBar
            android:id="@+id/mv_pr_pallet"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/mv_ed_code_cell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Barcode cell"
            android:inputType="textPersonName" />

        <ImageButton
            android:id="@+id/mv_btn_code_cell"
            android:layout_width="55dp"
            android:layout_height="50dp"
            android:scaleType="fitXY"
            android:src="@drawable/scan_barcode"
            tools:src="@drawable/scan_barcode" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/mv_name_cell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />

        <androidx.core.widget.ContentLoadingProgressBar
            android:id="@+id/mv_pr_cell"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:visibility="invisible" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/mv_btn_move"
            style="@style/DefaultButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Move" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/mv_infoBorder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="12pt" />
    </ScrollView>

</LinearLayout>